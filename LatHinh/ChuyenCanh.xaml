<Window x:Class="WPF_Margin_.ChuyenCanh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Margin_"
        mc:Ignorable="d"
        Title="Thông Báo" Height="300" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock
            x:Name="tbthongbao"
            Text="Thông báo"
            VerticalAlignment="Top"
            Margin="0,50,0,0"
            TextAlignment="Center"
            FontSize="30"
            ></TextBlock>
        <Button
            x:Name="btnchoilai"
            Content="Chơi lại"
            VerticalAlignment="Bottom"
            Margin="50,0,150,50"
            Height="50" Click="btnchoilai_Click"
            FontFamily="Times New Roman"
            FontSize="15"
            FontWeight="Bold"
            ></Button>
        <Button
            x:Name="btnchotiep"
            Content="Chơi tiếp"
            VerticalAlignment="Bottom"
            Margin="150,0,50,50"
            Height="50" Click="btnchotiep_Click"
             FontFamily="Times New Roman"
            FontSize="15"
            FontWeight="Bold"
            ></Button>
    </Grid>
</Window>
